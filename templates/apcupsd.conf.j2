# apcupsd configuration - Managed by Ansible
# Do not edit manually - changes will be overwritten
#
# Mode: {{ 'MASTER (USB)' if apcupsd_upstype == 'usb' else 'SLAVE (Network)' }}

## General Configuration
UPSNAME {{ apcupsd_upsname | default(inventory_hostname) }}
UPSCABLE {{ apcupsd_cable | default('usb') }}
UPSTYPE {{ apcupsd_upstype }}
DEVICE {{ apcupsd_device | default('') }}

## Network Information Server (NIS)
LOCKFILE /var/lock
NISIP {{ apcupsd_nisip | default('0.0.0.0') }}
NISPORT {{ apcupsd_nisport | default(3551) }}

## Shutdown Behavior
ONBATTERYDELAY {{ apcupsd_onbatterydelay | default(6) }}
BATTERYLEVEL {{ apcupsd_batterylevel | default(10) }}
MINUTES {{ apcupsd_minutes | default(5) }}
TIMEOUT {{ apcupsd_timeout | default(0) }}
ANNOY {{ apcupsd_annoy | default(300) }}
ANNOYDELAY {{ apcupsd_annoydelay | default(60) }}
NOLOGON {{ apcupsd_nologon | default('disable') }}
KILLDELAY {{ apcupsd_killdelay | default(0) }}

## NIS Network Access
NETSERVER {{ apcupsd_netserver | default('on') }}
{% if apcupsd_upstype == 'net' %}

## Network slave - polling configuration
POLLTIME {{ apcupsd_polltime | default(60) }}
{% endif %}

## Logging
STATTIME {{ apcupsd_stattime | default(0) }}
STATFILE /var/log/apcupsd.status
LOGSTATS {{ apcupsd_logstats | default('off') }}
DATATIME {{ apcupsd_datatime | default(0) }}

## Self-test interval (hours, 0=disable)
SELFTEST {{ apcupsd_selftest | default('336') }}

## Event script directory
SCRIPTDIR /etc/apcupsd
PWRFAILDIR /etc/apcupsd
NOLOGINDIR /etc
